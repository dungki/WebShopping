@using WebShopping.Core.Objects;
@{
    Member member = Session["Login"] as Member;
}
<!-- header-section-->
<div class="header-wrapper">
    <div class="container">
        <div class="row">
            <!-- logo -->
            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-8">
                <div class="logo">
                    <a href="@Url.Action("Index","Products")"><img src="~/images/logo.png" alt=""> </a>
                </div>
            </div>
            <!-- /.logo -->
            <!-- search -->
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                <div class="search-bg">
                    @using (Html.BeginForm("Index","Products"))
                    {
                        <input type="text" class="form-control" name="search" placeholder="Search Here" required="">
                        <button type="Submit"><i class="fa fa-search"></i></button>
                    }
                </div>
            </div>
            <!-- /.search -->
            <!-- account -->
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                <div class="account-section">
                    <ul>
                        @if (member == null)
                        {
                            <li><a href="#" class="title hidden-xs" data-toggle="modal" data-target="#exampleModalCenterLogin">Login</a></li>
                            <li class="hidden-xs">|</li>
                            <li><a href="#" class="title hidden-xs" data-toggle="modal" data-target="#exampleModalCenterRegister">Register</a></li>
                        }
                        else if (member.MemberShipTypeId == 2)
                        {
                            <li><a href="#" class="title hidden-xs">VIP</a></li>
                            <li class="hidden-xs">|</li>
                            <li><a href="@Url.Action("Logout","Login")" class="title hidden-xs">Logout</a></li>
                        }
                        else if (member.MemberShipTypeId == 3)
                        {
                            <li><a href="#" class="title hidden-xs">Normal</a></li>
                            <li class="hidden-xs">|</li>
                            <li><a href="@Url.Action("Logout","Login")" class="title hidden-xs">Logout</a></li>
                        }
                        else if (member.MemberShipTypeId == 4)
                        {
                            <li><a href="@Url.Action("Index","Admin")" class="title hidden-xs">Admin</a></li>
                            <li class="hidden-xs">|</li>
                            <li><a href="@Url.Action("Logout","Login")" class="title hidden-xs">Logout</a></li>
                        }
                        @Html.Action("CartIcon", "Cart")
                    </ul>
                </div>
                <!-- /.account -->
            </div>
            <!-- search -->
        </div>
    </div>
    <!-- navigation -->
    <div class="navigation">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <!-- navigations-->
                    <div id="navigation">
                        <ul>
                            <li class="active"><a href="@Url.Action("Index","Products")">Home</a></li>
                            <li class="has-sub">
                                <a href="#">Phone</a>
                                <ul>
                                    <li><a href="@Url.Action("Iphone","Products")">Iphone</a></li>
                                    <li><a href="@Url.Action("Oppo","Products")">Oppo </a></li>
                                    <li><a href="@Url.Action("Iphone","Products")">Xiaomi </a></li>
                                    <li><a href="@Url.Action("Xiaomi","Products")">Google Pixel </a></li>
                                    <li><a href="@Url.Action("Nokia","Products")">Nokia </a></li>
                                    <li><a href="@Url.Action("Samsung","Products")">Samsung </a></li>
                                    <li><a href="@Url.Action("Sony","Products")">Sony </a></li>
                                </ul>
                            </li>

                            <li class="has-sub">
                                <a href="#">Laptop</a>
                                <ul>
                                    <li><a href="@Url.Action("MSI","Products")">MSI</a></li>
                                    <li><a href="@Url.Action("Acer","Products")">Acer</a> </li>
                                    <li><a href="@Url.Action("Dell","Products")">Dell</a> </li>
                                    <li><a href="@Url.Action("Hp","Products")">Hp</a> </li>
                                </ul>
                            </li>
                            <li class="has-sub">
                                <a href="#">Ipad</a>
                                <ul>
                                    <li><a href="blog-default.html">Ipad 2021</a></li>
                                    <li><a href="blog-single.html">Ipad 2020</a></li>
                                </ul>
                            </li>
                            <li>
                                <a href="about.html">About</a>
                            </li>
                            <li>
                                <a href="contact-us.html">Contact Us</a>
                            </li>

                        </ul>
                    </div>
                </div>
                <!-- /.navigations-->
            </div>
        </div>
    </div>
</div>
