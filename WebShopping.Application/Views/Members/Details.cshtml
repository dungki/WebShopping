    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
        <i class="fa fa-bars"></i>
    </button>


    @if (member == null || member.MemberShipTypeId != 4)
    {
        <script>
            window.location.href = "Error";
        </script>
    }
    else
    {
        <!-- Topbar Navbar -->
        <ul class="navbar-nav ml-auto">
